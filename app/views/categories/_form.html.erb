<%= form_for category, html: { multipart: true } do |f| %>

  <div id=form>
  	<!-- Categorie -->
  	<table>
      <!-- Afbeeldingen -->
      <tr>
        <th><%= f.label :pictures %></th>
        <td><%= file_field_tag 'images[]', type: :file, multiple: true %></td>
      </tr>
  		<!-- Naam -->
  		<tr class='name'>
  			<th><%= f.label :name %></th>
   			<td><%= f.text_field :name %>
        </td>
    	</tr>
      <% if category.errors[:name].any? %>
        <tr id='errors'>
          <th></th><td><% category.errors[:name].each do |msg| %>
              <%= "- #{msg}" %><br>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= f.submit class: 'button' %>
  </div>

<% end %>
