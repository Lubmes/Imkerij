<table>
  <tbody>
	  <tr>
	  	<th><%= Category.human_attribute_name :name %></th>
	    <td><%= category.name %></td>
	  </tr>
  </tbody>
  <% if policy(category).admin_action? %>
	  <tfoot class='model-actions'>
	  	<tr>
		  	<td colspan='2'>
		  		<%= link_to 'VERWIJDER', [category],
						  				 method: :delete,
						  				 data: { confirm: 'Weet je zeker dat je deze categorie en de daarbij behorende producten wil verwijderen?' } %>
		  	</td>
	  	</tr>
	  	<tr>
		  	<td colspan='2'>
		  		<%= link_to 'BIJWERKEN', [:edit, category] %>
		  	</td>
	  	</tr>
	  	<tr>
		  	<td colspan='2'>
		  		<%= link_to 'NIEUW PRODUCT', [:new, category, :product] %>
		  	</td>
	  	</tr>
	  </tfoot>
	<% end %>
</table>
