<table>
	<tbody>
		<tr>
			<th><%= Booking.human_attribute_name :name %></th>
			<td><%= booking.product_name %><td>
		</tr>
		<tr>
			<th><%= Booking.human_attribute_name :product_price %></th>
			<td><%= currency_symbol %> <%= booking.product_price %><td>
		</tr>
		<tr>
			<th><%= Booking.human_attribute_name :product_sales_tax %></th>
			<td><%= number_with_precision(booking.product_sales_tax, strip_insignificant_zeros: true) %> %<td>
		</tr>
		<tr>
			<th><%= Booking.human_attribute_name :product_mail_weight %></th>
			<td><%= booking.product_mail_weight %><td>
		</tr>
		<tr>
			<th><%= Booking.human_attribute_name :product_quantity %></th>
			<td><%= booking.product_quantity %><td>
		</tr>
		<tr>
			<th><%= Booking.human_attribute_name :total_price %></th>
			<td><%= currency_symbol %> <%= booking.total_price %><td>
		</tr>
		<tr>
			<th><%= Booking.human_attribute_name :total_mail_weight %></th>
			<td><%= booking.total_mail_weight %> gr<td>
		</tr>
	</tbody>
	<tfoot class='model-actions'>
		<%= form_for booking, remote: true do |f| %>
  		<%= f.hidden_field :product_id, value: booking.product.id unless booking.product.nil? %>
	  	<tr>
		    <th><%= Booking.human_attribute_name :product_quantity %></th>
		    <td><%= f.number_field :product_quantity, value: booking.product_quantity, min: 1 %><td>
		  </tr>
	  	<tr>
		  	<td colspan='2'>
		  		<%= f.submit class: 'button' %>
		  	<td>
	  	</tr>
	  <% end %>

	  <% if true #policy(booking).admin_action? %>
	  	<tr>
		  	<td colspan='2'>
		  		<%= link_to 'VERWIJDER', [booking], method: :delete, remote: true, class: 'delete' %>
		  	<td>
		  </tr>
  	<% end %>
  </tfoot>
</table>
