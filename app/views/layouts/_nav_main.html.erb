<ul id='main-nav'>
  <li><%= active_link_to 'home', root_path, active: :exclusive %></li>
  <li><%= active_link_to 'agenda', events_path %></li>
  <li><%= active_link_to 'winkel', shop_path %></li>
  <% if policy(:application).admin_action? %>
    <li><%= active_link_to 'admin', admin_path,
                            active: [['welcome', 'users', 'orders'],['index', 'admin']] %></li>
  <% end %>
  <div class='profile'>
    <% if user_signed_in? %>
      <li>
        <%= active_link_to "#{current_user.first_name} #{'(Admin)' if current_user.admin?}",
        [current_user] %>
      </li>
      <li><%= link_to 'log uit', destroy_user_session_path, method: :delete %></li>
    <% end %>
    <% unless user_signed_in? %>
      <li><%= active_link_to 'inloggen', new_user_session_path %></li>
      <li><%= active_link_to 'nieuwe account', new_user_registration_path %></li>
    <% end %>
  </div>
</ul>
