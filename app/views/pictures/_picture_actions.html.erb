<ul class='record-actions'>
  <%= form_for [imageable_object, picture], remote: true do |f| %>
      <li class="<%= picture.visable ? 'visable' : 'invisable' %>">
        <%= link_to [:visability_toggle, imageable_object, picture], remote: true do %>
          <% if picture.visable? %>
            <i class="fa fa-eye"></i>
          <% else %>
            <i class="fa fa-eye-slash"></i>
          <% end %>
        <% end %>
      </li>
  <% end %>
    <li colspan='2'>
      <%= link_to [imageable_object, picture],
            method: :delete,
            remote: true  do%>
        <i class="fa fa-trash-o"></i>
      <% end %>
    </li>
</ul>
