<div class='selection'>
  <div class='info'>
    <%= currency_symbol %> <%= product.price %>
      <small class='price'>incl. <%= number_with_precision(product.sales_tax, strip_insignificant_zeros: true) %> %</small>
    <% if false %>
      (<%= number_with_precision(product.sales_tax, strip_insignificant_zeros: true) %>% BTW,
      <%= product.mail_weight %> gr)
    <% end %>
  </div>
  <div class='submit'>
    <%= render 'selections/form', product: product, selection: @selection %>
  </div>
</div>
