<div id='record-zoom' class='product'>
	<h3 class='title'><%= @product.name %></h3>
	<div class='info'>
		<%= render 'pictures/cover_picture',
					picture: @product.pictures.where(visable: true).first %>

		<div class='main-content'>
			<%= render 'pictures/row_gallery',
				pictures: @product.pictures.where(visable: true) %>
			<%= render @product, category: @product.category %>
			<%= render 'selections/product_form_wrap', product: @product, selection: @selection %>
		</div>
	</div>

</div>
