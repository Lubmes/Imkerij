<nav class='product-bar record-bar <%= 'unavailable' unless product.available %>'>
  <% if policy(product).edit? %>
    <div class='up-down-action <%= "single-move" if product.first? || product.last? %>'>
      <% unless product.first? %>
        <div class='up'>
          <%= link_to [:move_higher, product] do %>
            <i class='icon-move-up'></i>
          <% end %>
        </div>
      <% end %>
      <% unless product.last? %>
        <div class='down'>
          <%= link_to [:move_lower, product] do %>
            <i class='icon-move-down'></i>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class='title'>
    <h5>
      <%= product.name %>
      <small><%= product.content_weight %><%= 'gr' if product.content_weight %></small>
      <small><%= product.content_volume %><%= 'ml' if product.content_volume %></small>
    </h5>
  </div>
  <% if policy(product).edit? %>
    <%= link_to [:edit, product.category, product], title: "bijwerken" do %>
      <i class='icon-edit'></i>
    <% end %>
  <% end %>
  <% if policy(product).destroy? %>
    <%= link_to [product.category, product],
         method: :delete,
         data: { confirm: 'Weet je zeker dat je dit product wil verwijderen?' },
         class: 'delete',
         title: "verwijderen" do %>
      <i class='icon-trash'></i>
    <% end %>
  <% end %>
</nav>
