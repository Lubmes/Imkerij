<%= form_for :delivery do |f| %>

<table class='delivery'>
  <tr>
    <div class="field">
      <th><%= f.label :address_street_name %></th>
      <td><%= f.text_field :address_street_name %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <th><%= f.label :address_street_number %></th>
      <td><%= f.text_field :address_street_number %></td>
    </div>
  </tr>
  <tr>
    <div class="field">
      <th><%= f.label :address_zip_code %></th>
      <td><%= f.text_field :address_zip_code %></td>
    </div>
  </tr>
  <tr>
      <div class="field">
        <th><%= f.label :address_city %></th>
        <td><%= f.text_field :address_city %></td>
      </div>
  </tr>
  <tr>
      <div class="field">
        <th><%= f.label :address_country %></th>
        <td><%= f.text_field :address_country %></td>
      </div>
  </tr>
</table>

<%= f.submit "Opslaan" %>

<% end %>
