<div class='offset'>&nbsp;</div>

<div id='payment' class='success'>

	<div id='controls'>
		<h2>SUCCES!</h2>
		<%= link_to shop_path, class: 'success' do %>
	    <i class='fa fa-arrow-left'></i> terug naar winkel
	  <% end %>
		<%= link_to "Download PDF", [@order, @order.first_invoice],
					target: "_blank",
					format: :pdf %>
	</div>

	<div id='order' class='co-order-col'>
		<header>
			<h3>Uw bestelling</h3>
		</header>
		<%= render @order %>
	</div>
	<div class="user-info">
		<div class="co-user-col">
			<header>
				<h3>Uw verzendgegevens</h3>
			</header>
			<%= render @customer %>
			<%= render @delivery, card_title: "Verzendadres", order: @order %>
		</div>
	</div>

	<% if false %>
		<div class='co-order-col'>
			<div>
				naar: <%= ' ' %><br>
				pakket: <%= ' ' %><br>
				<strong>PostNL:</strong> <%= @client.operations %><br>
				<strong>PostNLreq:<br>
				</strong> <%= @request.body %><br>
				<strong>PostNLresp:<br>
				</strong> <%= '@response.body' %><br>
			</div>
		</div>
	<% end %>
</div>
