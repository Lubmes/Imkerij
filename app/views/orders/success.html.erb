<div class='offset'>&nbsp;</div>

<div id='payment' class='success'>

	<div id='controls'>
		<h2>SUCCES!</h2>
		<%= link_to shop_path, class: 'success' do %>
	    <i class='fa fa-arrow-left'></i> terug naar winkel
	  <% end %>
		<%= link_to "Download PDF", [@order, @order.first_invoice],
					target: "_blank",
					format: :pdf %>
	</div>

	<div id='order' class='co-order-col'>
		<header>
			<h3>Uw bestelling</h3>
		</header>
		<%= render @order %>
	</div>
	<div class="user-info">
		<div class="co-user-col">
			<header>
				<h3>Uw verzendgegevens</h3>
			</header>
			<%= render @customer %>
			<%= render @delivery, card_title: "Verzendadres", order: @order %>
		</div>
	</div>

	<% if false %>
		<div class='co-order-col'>
			<div>
				naar: <%= @to_address.id %><br>
				pakket: <%= @parcel.id %><br>
				PostNL: <br>
				<h5>Rates</h5>
				<% @shipment.rates.each do |rate| %>
					<ul>
						<h6><%= rate.carrier %></h6>
						<li><%= rate.service %></li>
						<li><%= rate.rate %></li>
						<li><%= rate.id %></li>
					</ul>
				<% end %>
			</div>
		</div>
	<% end %>
</div>
