<% if order.bookable? %>
	<% if @order.bookings.any? %>
		<ul class='record-actions'>
			<% if policy(@order).empty? %>
				<% unless controller.action_name == 'confirm' %>
				<li>
					<%= link_to [:empty, order] do %>
						<i class='fa fa-trash-o'></i>
					<% end %>
				</li>
				<% end %>
			<% end %>
			<% if policy(@order).check_out? %>
				<% unless controller.action_name == 'check_out' || controller.action_name == 'confirm' %>
					<li class='to-check-out'>
						<%= link_to [:check_out, order] do %>
							<small>AFREKENEN</small> <i class='fa fa-arrow-right'></i>
						<% end %>
					</li>
				<% end %>
			<% end %>
		</ul>
	<% end %>
<% end %>

<table class='bookings <%= order.status%>'>

	<thead>
		<tr>
			<td colspan='5' class='order-totals'>
				<strong><%= currency_symbol %> <%= order.total_price %></strong>
				<br>
				<span class='weight'>
					<i><%= order.total_mail_weight %> gr</i>
				</span>
			</td>
		</tr>
	</thead>

	<tbody>
		<% order.bookings.order(created_at: :desc).each do |booking| %>
			<div class='booking'>
				<%= render booking %>
			</div>
		<% end %>
	</tbody>
</table>

<% unless in_payment_process? %>
	<% if order.invoices.any? %>
		<%= render 'orders/order_invoices', order: order %>
	<% end %>
<% end %>

<%if false %>
<p>current_user.id: <%= current_user.nil? ? "nil" : current_user.id  %></p>
<p>order.customer.id <%= order.customer.id %></p>
<p>order.id: <%= order.id %></p>
<p>order.status: <%= order.status %></p>
<p>order.package_delivery: <%= order.package_delivery.nil? ? "nil" : order.package_delivery.address_zip_code %></p>
<% end %>
