<% content_for :navigation do %>
	<%= render 'layouts/nav_sec_admin' %>
<% end %>

<div id='orders'>
	<table id='paid'>

		<thead>
			<tr>
				<th>Klant</th>
				<th>Laatst bijgewerkt</th>
				<th>Bedrag</th>
				<th>Status</th>
			</tr>
		</thead>

		<tbody>
			<% @paid_orders.each do |order| %>

				<tr class='order'>
					<td><%= link_to [order.customer] do %>
							<i class='fa fa-search'></i>
							<span>
								<%= "#{order.customer.first_name} #{order.customer.last_name}" %>
							</span
						<% end %>
					</td>
					<td><%= I18n.l(order.updated_at, format: :long) %></td>
					<td><%= currency_symbol + " " + order.total_price %></td>
					<td><%= order.status %></td>
				</tr>

			<% end %>
		</tbody>
	</table>
</div>
